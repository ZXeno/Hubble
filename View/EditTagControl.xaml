<UserControl x:Class="DeviceMonitor.View.EditTagControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeviceMonitor.View"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="200">
    <Grid>
        <Border BorderBrush="#466BC7" Background="Beige" BorderThickness="2" HorizontalAlignment="Left" Height="75" CornerRadius="4" VerticalAlignment="Top" Width="200"/>
        <TextBox TextWrapping="NoWrap" Text="{Binding TextBoxContents}" Margin="10,10,10,0" Height="30" VerticalAlignment="Top" />
        <Button Command="{Binding DoneCommand}" Content="Done" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" />
    </Grid>
</UserControl>
