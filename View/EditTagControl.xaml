<UserControl x:Class="DeviceMonitor.View.EditTagControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeviceMonitor.View"
             mc:Ignorable="d" d:DesignWidth="200" Height="65" Background="Transparent" BorderBrush="Transparent">
    <Grid FocusManager.FocusedElement="{Binding ElementName=PopUpTextBox}" Background="Transparent">
        <Border BorderBrush="#466BC7" Background="Beige" BorderThickness="2" HorizontalAlignment="Left" Height="65" CornerRadius="4" VerticalAlignment="Top" Width="200"/>
        <TextBox Name="PopUpTextBox" TextWrapping="NoWrap" Text="{Binding TextBoxContents}" Margin="10,10,10,0" VerticalContentAlignment="Top" Height="20" VerticalAlignment="Top" />
        <Button Command="{Binding DoneCommand}" Content="Done" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" />
    </Grid>
</UserControl>
